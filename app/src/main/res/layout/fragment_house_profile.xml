<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragment.HouseProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_above="@+id/card_booknow"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_profilehouse_Image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/demo_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/iv_profilehouse_Image"
                android:background="@drawable/round_houseprofile"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:orientation="vertical">

                        <com.example.rentzy.customfont.CustomTextViewBold
                            android:id="@+id/tv_profilehouse_Name"
                            style="@style/black_16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:includeFontPadding="false"
                            android:text="Corner House" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/star" />

                            <com.example.rentzy.customfont.CustomTextViewSemiBold
                                android:id="@+id/tv_porofilehouse_Rating"
                                style="@style/black_12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:includeFontPadding="false"
                                android:text="5.0" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:gravity="center_vertical|end"
                        android:orientation="vertical">

                        <com.example.rentzy.customfont.CustomTextView
                            style="@style/black_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:includeFontPadding="false"
                            android:text="@string/houserent" />

                        <com.example.rentzy.customfont.CustomTextViewSemiBold
                            android:id="@+id/tv_profilehouse_Rent"
                            style="@style/black_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="end"
                            android:includeFontPadding="false"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:text="\u20b9 10000"
                            android:textColor="@color/colorPrimary2" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_houseprofile_blue"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_8sdp">

                    <com.example.rentzy.customfont.CustomTextViewMedium
                        style="@style/black_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/about" />

                    <com.example.rentzy.customfont.CustomTextView
                        android:id="@+id/tv_profilehouse_Description"
                        style="@style/black_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:maxLines="10"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:text="It has two bedrooms, a bathroom, an ideal well-equipped kitchen with a perfect patio to do the laundry and a spacious living room with a lovely terrace with table and chairs where you can eat outside. There are nice views of a big park." />

                    <com.example.rentzy.customfont.CustomTextViewMedium
                        style="@style/black_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:includeFontPadding="false"
                        android:text="@string/address" />

                    <com.example.rentzy.customfont.CustomTextView
                        android:id="@+id/tv_profilehouse_Address"
                        style="@style/black_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:maxLines="6"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:text="1123 JK street, Nehru Road, Rajkot, Gujarat" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_houseprofile"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_12sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:backgroundTint="#3790E0EF"
                            app:cardCornerRadius="@dimen/_25sdp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/bedroom" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:backgroundTint="#3790E0EF"
                            app:cardCornerRadius="@dimen/_25sdp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/kitchen" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_52sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:backgroundTint="#3790E0EF"
                            app:cardCornerRadius="@dimen/_25sdp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/bathroom" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:backgroundTint="#3790E0EF"
                            app:cardCornerRadius="@dimen/_25sdp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/swimming_pool" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:backgroundTint="#3790E0EF"
                            app:cardCornerRadius="@dimen/_25sdp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/parking" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="horizontal">

                    <com.example.rentzy.customfont.CustomTextViewSemiBold
                        android:id="@+id/tv_profilehouse_Bedroom"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0.5dp"
                        android:text="4\nBedroom" />

                    <com.example.rentzy.customfont.CustomTextViewSemiBold
                        android:id="@+id/tv_profilehouse_Kitchen"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="2\nKitchen" />

                    <com.example.rentzy.customfont.CustomTextViewSemiBold
                        android:id="@+id/tv_profilehouse_Bathroom"
                        android:layout_width="@dimen/_52sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="2\nBathroom" />

                    <com.example.rentzy.customfont.CustomTextViewSemiBold
                        android:id="@+id/tv_profilehouse_Swimmingpool"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="2\nPool" />

                    <com.example.rentzy.customfont.CustomTextViewSemiBold
                        android:id="@+id/tv_profilehouse_Parking"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="2\nParking" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_10sdp">

                    <com.example.rentzy.customfont.CustomTextViewMedium
                        style="@style/black_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/owner" />

                    <com.example.rentzy.customfont.CustomTextViewSemiBold
                        android:id="@+id/tv_prfilehouse_ownername"
                        style="@style/black_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="John Martin" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_booknow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorPrimary2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/call" />

            <com.example.rentzy.customfont.CustomTextViewSemiBold
                style="@style/white_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:includeFontPadding="false"
                android:text="@string/book_now" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>