<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:context=".fragment.Tour_First">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_12sdp"
        android:layout_weight="0.1">

        <com.example.rentzy.customfont.CustomTextViewMedium
            android:id="@+id/tv_skip_tour"
            style="@style/black_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:text="Skip"
            android:textColor="@color/font_color_gray" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.90"
        android:src="@drawable/ic_home_search"/>

    <com.example.rentzy.customfont.CustomTextViewMedium
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:includeFontPadding="false"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Everything you need in one app"
        style="@style/black_18"/>

    <LinearLayout
        android:id="@+id/lv_next"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/circle">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/next_arrow_white"/>

    </LinearLayout>

</LinearLayout>