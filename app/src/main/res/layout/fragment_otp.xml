<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="@dimen/_15sdp"
    android:paddingVertical="@dimen/_15sdp"
    tools:context=".fragment.OtpFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_margin="@dimen/_6sdp"
                    android:src="@drawable/back_arrow_lightgray" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/iv_otpbg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/ic_otp_verification" />

            <com.example.rentzy.customfont.CustomTextViewBold
                android:id="@+id/tv_codetitle"
                style="@style/black_22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Verification Code"
                android:textColor="@color/colorPrimary2" />

            <com.example.rentzy.customfont.CustomTextView
                android:id="@+id/tv_otpinfo"
                style="@style/black_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="We have sent the code verification to Your Mobile Number"
                android:textColor="@color/font_color_gray" />


                <com.example.rentzy.customfont.CustomTextView
                    android:id="@+id/tv_otpNumber"
                    style="@style/black_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:includeFontPadding="false"
                    android:text="1234567890" />

            <com.example.rentzy.customfont.CustomTextViewMedium
                android:id="@+id/tv_countdown"
                style="@style/black_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="00:00"
                android:textColor="@color/font_color_gray" />

            <com.example.rentzy.customfont.CustomTextViewSemiBold
                android:id="@+id/tv_otptitle"
                style="@style/black_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:includeFontPadding="false"
                android:text="OTP Code" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <com.example.rentzy.customfont.CustomEdittext
                    android:id="@+id/otp_1"
                    style="@style/black_14"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:background="@drawable/otp_shape"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:inputType="number" />

                <com.example.rentzy.customfont.CustomEdittext
                    android:id="@+id/otp_2"
                    style="@style/black_14"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/otp_shape"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:inputType="number" />

                <com.example.rentzy.customfont.CustomEdittext
                    android:id="@+id/otp_3"
                    style="@style/black_14"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/otp_shape"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:inputType="number" />

                <com.example.rentzy.customfont.CustomEdittext
                    android:id="@+id/otp_4"
                    style="@style/black_14"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/otp_shape"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:inputType="number" />

                <com.example.rentzy.customfont.CustomEdittext
                    android:id="@+id/otp_5"
                    style="@style/black_14"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/otp_shape"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:inputType="number" />

                <com.example.rentzy.customfont.CustomEdittext
                    android:id="@+id/otp_6"
                    style="@style/black_14"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/otp_shape"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:inputType="number" />

            </LinearLayout>

            <com.example.rentzy.customfont.CustomTextView
                android:id="@+id/tv_resendotp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend OTP"
                style="@style/black_12"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:includeFontPadding="false"/>

            <com.example.rentzy.customfont.CustomTextViewMedium
                android:id="@+id/tv_submit"
                style="@style/white_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/app_main_gradient"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingVertical="@dimen/_6sdp"
                android:text="Submit" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>